@model ChangePiePriceViewModel

<h2>Change price on Pie Menu</h2>

<form asp-action="ChangePiePrice">
    <div class="form-horizontal">
        <h4>Create</h4>
        <hr />


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="PieId" class="col-md-2 control-label"></label>
